# Production Environment Variables for TapIn Attendance System
# Copy this file and update with your actual values

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
FLASK_ENV=production

# Database Configuration
DATABASE_URL=sqlite:///tapin.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@host:port/database

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Email Configuration (Optional - for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=TapIn <noreply@tapin.edu>

# CORS Configuration
CORS_ORIGINS=https://tapin-attendance-58je.onrender.com

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=static/uploads
AVATAR_FOLDER=static/uploads/avatars

# QR Code Configuration
QR_CODE_SIZE=10
QR_CODE_BORDER=4

# Session Configuration
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
PERMANENT_SESSION_LIFETIME=1800

# Logging
LOG_LEVEL=INFO
LOG_FILE=tapin.log
